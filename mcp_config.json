{
  "mcpServers": {
    "github-mcp-server": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "dappier": {
      "transport": "stdio",
      "command": "uvx",
      "args": ["dappier-mcp"],
      "env": {
        "DAPPIER_API_KEY": "{DAPPIER_API_KEY}"
      }
    },
    "audioscrape": {
      "transport": "http",
      "url": "https://mcp.audioscrape.com",
      "headers": {
        "Authorization": "{AUDIOSCRAPE_API_KEY}"
      }
    },
    "favicon-generator": {
        "command": "uvx",
        "args": ["auto-favicon"],
        "env": {}
    },
    "serper-search": {
      "command": "npx",
      "args": ["-y", "serper-search-scrape-mcp-server"],
      "env": {
        "SERPER_API_KEY": "{SERPER_API_KEY}"
      }
    },
    "fetch": {
      "command": "docker",
      "args": ["run", "-i", "--rm", "mcp/fetch"]
    }
  }
}